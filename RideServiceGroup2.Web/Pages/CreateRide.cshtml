@page
@using RideServiceGroup2.Entities;
@model RideServiceGroup2.Web.Pages.CreateRideModel
@{
    ViewData["Title"] = "Opret Forlystelse";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="addProducts">
    <h2>Opret forlystelse</h2>
    <form method="post">
        @Html.AntiForgeryToken()
        <label asp-for="Ride.Name"></label>
        <input asp-for="Ride.Name" />
        <br />
        <label asp-for="Ride.ImgUrl"></label>
        <input asp-for="Ride.ImgUrl" placeholder="Fx orkanen.jpg" />
        <br />
        <label asp-for="Ride.Category"></label>
        <select asp-for="CategoryId">
            @{
                foreach (RideCategory category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            }
        </select>
        <br />
        <label asp-for="Ride.Description"></label>
        <br />
        <textarea asp-for="Ride.Description"></textarea>
        <br />
        <input type="submit" value="Opret" />
    </form>
    <p>@Model.Message</p>
</div>